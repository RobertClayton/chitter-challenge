<h1> Peeps </h1>

<form action='/peep/new' method='POST'>
  <label for='new_peep_box'>
    <input type='text' name='new_peep_box' placeholder='Enter new peep:' />
  </label>
  <input type='submit' value='Create Peep'>
</form>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      <%= peep.id %> : <%= peep.message   %>
    </li>
  <% end %>
</ul>
